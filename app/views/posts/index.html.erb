<nav>
  <%= link_to "Homepage", root_path %> |
  <%= link_to 'Articles', articles_path %> |
  <%= link_to 'Albums', albums_path %>
</nav>  

<h1>Posts</h1>

<div class="content-box">
  <table>
    <thead>
      <tr>
        <th>Post</th>
        <th>Options</th>
      </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td class="post-box">
              <%= render post %>
            </td>
            <td>
             <p dom_id="edit-post"> <%= link_to "Edit", edit_post_path(post) %> </p>
              <%= button_to "Delete", post, method: :delete, form_class: 'delete-form', params: { class: 'delete-button' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>

<br/>

<div style="text-align: center; font-weight: bold">
  <%= link_to "New Post", new_post_path %>
</div>

<div>
  <p class="centered-notice"><%= notice %></p>
</div>