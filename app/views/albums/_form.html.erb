<div class="form-container">
<%= form_with(model: @album, url: albums_path, local: true) do |f| %>
 
  <form>
    <div>
      <p>
        <%= f.label :caption %>
        <%= f.text_field :caption %>
      </p>
    </div>

    <div>
      <p>
        <%= f.label :description %>
        <%= f.text_field :description %>
      </p>
    </div>

    <p>
      <%= f.submit %>
    </p>

    <div>
      <%= link_to 'Back to albums', albums_path %>
    </div>
  </form>
  
  <% end %>
</div>

<div>
  <p class="centered-notice"><%= notice %></p>
</div>