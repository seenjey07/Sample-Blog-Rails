
<style> 
  body {
    background-image: url('app/assets/images/WhiteTulipsPinkBG.jpg');
    background-repeat: no-repeat;
    background-size: cover;
  }

  table {
    margin: 0 auto;
    border-collapse: collapse;
    width: 90%;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  th, td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: center;
  }

  th {
    padding: 13px;
    background-color: #F59F28;
  }

  tr:hover {
    background-color: #f5f5f5;
  }

  tr:nth-child(even) {
    background-color: #FAF8D4;
  }

  tr:nth-child(odd) {
    background-color: #F0CEA0;
  }

  li {
    list-style-type: none;
  }

  .delete_button {
    background-color: transparent; 
    border: none; 
    text-decoration: underline; 
    color: inherit; 
    cursor: pointer; 
    padding: 0;
  }

  .centered-notice {
    color: green;
    text-align: center;
    position: fixed;
    bottom: 5%;
    left: 45%;
  }

</style>

<nav>
  <%= link_to "Homepage", root_path %> |
  <%= link_to 'Posts', posts_path %> |
  <%= link_to 'Articles', articles_path %>
</nav>

<h1>Albums</h1>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.caption %></td>
        <td><%= album.description %></td>
        <td>
          <li><%= link_to 'Show', current_album_path(album) %></li>
          <li><%= link_to 'Edit', edit_album_path(album) %></li>
          <li><%= button_to 'Delete', delete_album_path(album), method: :delete, form_class: 'delete-form', params: { class: 'delete-button' } %></li>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<div style="text-align: center; font-weight: bold">
<%= link_to 'New Album', new_album_path %>
</div>

<p class="centered-notice"><%= notice %></p>
