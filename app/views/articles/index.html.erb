<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Article Details</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
     <tr>
        <td class="article-box">
          <%= render article %>
        </td>
        <td>
          <%= link_to "Edit", edit_article_path(article) %> |
          <%= button_to "Delete", article, method: :delete, form_class: 'delete-form', params: { class: 'delete-button' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  </br>
 
  <div style="text-align: center; font-weight: bold">
    <%= link_to "New Article", new_article_path %>
  </div>

  <div>
    <p class="centered-notice"><%= notice %></p>
  </div>