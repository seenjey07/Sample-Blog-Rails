<style>

  .article-box:nth-child(even) {
    background-color: #b3f2dd; 
  }

  .article-box:nth-child(odd) {
    background-color: #e08d79; 
  }

  .article-box {
    border: 1px double #000000;
    padding: 10px;
    margin-bottom: 10px;
  }

  .centered-notice {
    color: green;
    text-align: center;
    position: fixed;
    bottom: 5%;
    left: 45%;
  }

  table {
    width : 100%;
    border-collapse: collapse;
  }

  th, td {
    border: 1px solid #000;
    padding: 8px;
    text-align: center;
  }

  th {
    background-color: #f2f2f2;
    font-weight: bold;
  }


</style>

<nav>
  <%= link_to "Homepage", root_path %> |
  <%= link_to 'Posts', posts_path %> |
  <%= link_to 'Albums', albums_path %>
</nav>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Article Details</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
     <tr>
        <td class="article-box">
          <%= render article %>
        </td>
        <td>
          <%= link_to "Edit", edit_article_path(article) %> |
          <%= button_to "Delete", article, method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  </br>
 
  <div style="text-align: center; font-weight: bold">
    <%= link_to "New Article", new_article_path %>
  </div>

<p class="centered-notice"><%= notice %></p>
